<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-800 text-white p-10">
        <div class="w-full flex justify-end">
          <a
            class="bg-red-500 rounded-md px-3 py-2 inline-block mb-5"
            href="/logout"
            >Logout</a
          >
        </div>
               <div class="flex items-center gap-3 mb-5">
             <div class="w-15 h-15 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src= "/images/uploads/<%= user.profilepic %>" alt="">
             </div>
            <h3 class="text-3xl">Hello, <%= user.name %></h3>
        </div>
        <p>You can create a new post</p>
        <form action="/post" method="post">
          <textarea
            class="w-1/3 border-2 border-zinc-700 resize-none rounded-md mt-5 p-2 outline-none"
            name="content"
            id=""
            placeholder="What is on your mind ?"
          ></textarea>
          <input
            class="bg-blue-500 rounded-md px-3 py-2 outline-none mt-5 block"
            type="submit"
            value="Create New Post"
          />
        </form>

        <div class="posts mt-10">
          <h3 class="text-zinc-400">Yours Posts</h3>
          <div class="postcontainer mt-5">
            <% user.posts.reverse().forEach(function(post){
              %>
              <div class="post bg-zinc-700 border-[1px] border-zinc-600 rounded-md p-2 w-1/3 mb-5">
              <h3 class="text-blue-500">@ <%= user.username %></h3>
              <h3 class="tracking-tighter"><%= post.content %></h3>
              <div class=" flex gap-5">
                  <a href="/like/<%= post._id %>" class="text-blue-400"><%= post.like.indexOf(user._id) === -1 ? "Like" : "Unlike" %></a>
                  <a href="/edit/<%= post._id %>" class="text-gray-400">Edit</a>
              </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
